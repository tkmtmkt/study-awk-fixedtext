/OP1/ {
  FIELDWIDTHS="4 5 4 3"
  $0 = $0
  print "----------------------------------------------------------------------"
  print "0         1         2         3         4         5         6         "
  print "0123456789012345678901234567890123456789012345678901234567890123456789"
  print $0
  print "01 : "$1
  print "02 : "$2
  print "03 : "$3
  print "04 : "$4
  for (i = 0; i < $4; i++) {
    print "XX : "substr($0, 17+i*9, 8)
  }
}
